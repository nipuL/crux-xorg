# Description: xorg lib libXau
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at code-monkey dot de
# Depends on: xorg-xproto

name=xorg-libxau
version=1.0.0
release=1
source=(http://xorg.freedesktop.org/releases/X11R7.0/src/everything/libXau-$version.tar.bz2)

build() {
	cd libXau-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}

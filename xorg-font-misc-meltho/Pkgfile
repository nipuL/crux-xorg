# Description: xorg font font-misc-meltho
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at code-monkey dot de
# Depends on: xorg-mkfontdir, xorg-mkfontscale, fontconfig

name=xorg-font-misc-meltho
version=1.0.0
release=2
source=(http://xorg.freedesktop.org/releases/X11R7.0/src/everything/font-misc-meltho-$version.tar.bz2)

build() {
	cd font-misc-meltho-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install

	rm -f $PKG/usr/lib/X11/fonts/OTF/fonts.{dir,scale,cache-1}
}

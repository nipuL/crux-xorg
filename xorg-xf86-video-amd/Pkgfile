# Description: xorg driver xf86-video-amd
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu

name=xorg-xf86-video-amd
version=2.7.7.0
release=1
source=(http://xorg.freedesktop.org/releases/individual/driver/xf86-video-amd-$version.tar.bz2)

build() {
	cd xf86-video-amd-$version

	./configure --prefix=/usr --mandir=/usr/man

	make
	make DESTDIR=$PKG install
}

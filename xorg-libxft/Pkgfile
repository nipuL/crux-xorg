# Description: xorg lib libXft
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu
# Depends on: xorg-libxrender, freetype, fontconfig

name=xorg-libxft
version=2.1.8.2
release=1
source=(http://xorg.freedesktop.org/releases/X11R7.0/src/everything/libXft-$version.tar.bz2)

build() {
	cd libXft-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}

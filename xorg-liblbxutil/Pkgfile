# Description: xorg lib liblbxutil
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu
# Depends on: xorg-xproto, xorg-xextproto

name=xorg-liblbxutil
version=1.0.0
release=1
source=(http://xorg.freedesktop.org/releases/individual/lib/liblbxutil-$version.tar.bz2)

build() {
	cd liblbxutil-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}

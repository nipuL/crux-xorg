# Description: xorg lib libX11
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu
# Depends on: xorg-bigreqsproto, xorg-xf86bigfontproto, xorg-xextproto, xorg-xtrans, xorg-libxau, xorg-xcmiscproto, xorg-libxdmcp, xorg-kbproto, xorg-inputproto

name=xorg-libx11
version=1.0.1
release=3
source=(http://xorg.freedesktop.org/releases/individual/lib/libX11-$version.tar.bz2 \
        http://xorg.freedesktop.org/releases/X11R7.1/patches/libX11-$version-setuid.diff)

build() {
	cd libX11-$version

	patch -Np1 -i $SRC/libX11-$version-setuid.diff

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}

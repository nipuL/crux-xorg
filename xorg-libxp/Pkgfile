# Description: xorg lib libXp
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at code-monkey dot de
# Depends on: xorg-libx11, xorg-xextproto, xorg-libxext, xorg-libxau, xorg-printproto

name=xorg-libxp
version=1.0.0
release=1
source=(http://xorg.freedesktop.org/releases/X11R7.0/src/everything/libXp-$version.tar.bz2)

build() {
	cd libXp-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}

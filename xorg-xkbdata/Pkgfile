# Description: xorg XKB data files
# URL: http://xorg.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu
# Depends on: xorg-xkbcomp

name=xorg-xkbdata
version=1.0.1
release=1
source=(http://xorg.freedesktop.org/releases/individual/data/xkbdata-$version.tar.bz2)

build() {
	cd xkbdata-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}

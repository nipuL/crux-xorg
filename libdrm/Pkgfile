# Description: libdrm
# URL: http://dri.freedesktop.org
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu

name=libdrm
version=2.0.1
release=1
source=(http://dri.freedesktop.org/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
